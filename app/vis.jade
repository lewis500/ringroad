svg.vis(version="1.1" baseProfile="basic" x="0" y="0" viewBox="0 0 110 110")
	g.g-main(transform='translate(55,55)')
		circle.road(r='50')
		g.gradient
			circle(r='1' cy='45' ng-repeat='n in vm.pal track by $index' ng-attr-fill='{{::vm.colors(n)}}' ng-attr-transform='rotate({{::n}})')
		g.cars
			g.g-car(ng-repeat='car in vm.traffic.traveling track by car.id' d3-der='{transform: vm.rotator(car) }' datum='::car' tran='vm.tran')
				rect.car(y='49' width='3' height='2' x='-1.5' ng-attr-fill='{{::car.color}}')

